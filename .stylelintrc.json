{
  "extends": "stylelint-config-sass-guidelines",
  "overrides": [
    {
      "customSyntax": "postcss-scss",
      "files": [
        "*.scss",
        "**/*.scss"
      ]
    }
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "max-nesting-depth": [
      1,
      {
        "ignore": [
          "blockless-at-rules",
          "pseudo-classes"
        ]
      }
    ],
    "number-leading-zero": "never",
    "selector-class-pattern": "[a-z]+(-_[a-z]+)*",
    "order/properties-alphabetical-order": true
  }
}
